<p id="notice"><%= flash[:success] %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing User</h2>
        <div id="errors">
          <% if @user.errors.any? %>
           <% if @user.errors.count == 1 %>
             <h3><%= @user.errors.count %> error has occured.</h3>
           <% elsif @user.errors.count > 1 %>
             <h3><%= @user.errors.count %> errors have occured.</h3>
           <% end %>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model: @user do |f| %>
          <br>
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", class:"form-control user_name" %>
          <br>
  
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> 
          <br>
          
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputIntroduction", class:"form-control user_introduction" %>
          <br>
  
          <%= f.submit 'Update User', class:"btn btn-success" %>
  
        <% end %>
    </div>
  </div>
</div>
